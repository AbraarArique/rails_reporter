<%= form_for @record, html: {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :reporter, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :reporter, class: "form-control", placeholder: "Enter reporter's name" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter reporter's email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", placeholder: "Enter report description" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: "btn btn-info btn-block form-control" %>
    </div>
  </div>
<% end %>
